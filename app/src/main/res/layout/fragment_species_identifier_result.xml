<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".SearchByBird.SpeciesIdentifierResult"
    android:id="@+id/species_identifier_result">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/species_identifier_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Result:" />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/initialise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Initialise" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/animal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Animal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/species_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"/>

        <Button
            android:id="@+id/species_skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="Skip" />
    </LinearLayout>

</LinearLayout>